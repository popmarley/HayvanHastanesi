 
 
<head>

    <style>
     

        .page-title {
            background-size: cover;
            background-position: center;
            padding: 80px 0;
            color: white;
            text-shadow: 0 2px 5px rgba(0,0,0,0.4);
        }

        .card {
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
            }

        .card-img-top {
            width: 180px;
            height: 180px;
            object-fit: cover;
            border-radius: 50%;
        }

        .filter-buttons {
            margin-bottom: 30px;
        }

            .filter-buttons .btn {
                margin-right: 10px;
            }

        .hidden {
            display: none !important;
        }
    </style>
  
</head>



<!-- Filtreleme Butonları -->
<div class="container filter-buttons text-center mt-5" id="filterButtons">
    <button class="btn btn-outline-dark" onclick="filterServices('all')">Tümü</button>
</div>

<!-- Hizmet Kartları Bölümü -->
<section class="py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row g-4" id="servicesContainer">

            <!-- Kartlar burada olacak -->

        </div>
    </div>
</section>

<script>
    const services = [
      { title: 'Genel Muayene', category: 'Genel', image: '/img/content/images/pages/genelmuayene.jpg', link: '#', description: 'Evcil dostlarınızın genel sağlık durumunu değerlendirmek için düzenli muayene hizmeti sunuyoruz. Erken teşhis, sağlıklı bir yaşamın anahtarıdır.' },
      { title: 'Acil Müdahale (7/24)', category: 'Acil', image: '/img/content/images/pages/acil.jpg', link: '#', description: 'Acil durumlarda 7/24 hizmet veriyoruz. Hızlı teşhis ve etkin müdahale ile hayat kurtarıyoruz.' },
      { title: 'Cerrahi', category: 'Cerrahi', image: '/img/content/images/pages/cerrahi.jpg', link: '#', description: 'Steril ameliyathanelerimizde, basit işlemlerden karmaşık operasyonlara kadar tüm cerrahi müdahaleleri güvenle gerçekleştiriyoruz.' },
      { title: 'Doğum ve Jinekoloji', category: 'Cerrahi', image: '/img/content/images/pages/dogum.jpg', link: '#', description: 'Üreme sağlığı, gebelik takibi ve doğum sürecinde uzman veteriner hekimlerimizle yanınızdayız.' },
      { title: 'Dahiliye', category: 'İç Hastalıkları', image: '/img/content/images/pages/dahiliye.jpg', link: '#', description: 'Karmaşık iç hastalıklarının tanı ve tedavisinde kapsamlı çözümler sunuyoruz.' },
      { title: 'Onkoloji', category: 'İç Hastalıkları', image: '/img/content/images/pages/onkoloji.jpg', link: '#', description: 'Tümör tanısı, tedavi planlaması ve bakım süreçlerinde özel ilgi ve bilimsel yaklaşımlar ile hizmet veriyoruz.' },
      { title: 'Aşılama ve Koruyucu Hekimlik', category: 'Koruyucu Hekimlik', image: '/img/content/images/pages/asilar.jpg', link: '#', description: 'Aşı uygulamalarıyla hayvan dostlarınızı hastalıklardan koruyor, sağlıklı bir yaşam için önlem alıyoruz.' },
      { title: 'İç-Dış Parazit Uygulamaları', category: 'Koruyucu Hekimlik', image: '/img/content/images/pages/parazit.jpg', link: '#', description: 'Parazitlerden kaynaklı sağlık problemlerini önlemek için düzenli koruma ve tedavi hizmeti sunuyoruz.' },
      { title: 'Ağız ve Diş Sağlığı', category: 'Genel', image: '/img/content/images/pages/agizdis.jpg', link: '#', description: 'Diş taşı temizliği, diş çekimi ve ağız muayenesiyle dostlarınızın ağız sağlığını koruyoruz.' },
      { title: 'Röntgen, Ultrason ve Görüntüleme', category: 'Tanı', image: '/img/content/images/pages/goruntuleme.jpg', link: '#', description: 'Modern görüntüleme teknolojileriyle iç hastalıkların ve yaralanmaların kesin tanısını sağlıyoruz.' },
      { title: 'Kan Tahlilleri ve Laboratuvar', category: 'Tanı', image: '/img/content/images/pages/laboratuvar.jpg', link: '#', description: 'Hızlı ve güvenilir laboratuvar analizleriyle teşhis sürecini destekliyor, tedavide etkinlik sağlıyoruz.' },
      { title: 'Yoğun Bakım Ünitesi', category: 'Acil', image: '/img/content/images/pages/yogunbakim.jpg', link: '#', description: 'Kritik durumdaki hayvanlara 24 saat gözetim ve özel bakım sağlayan tam donanımlı yoğun bakım ünitemizle hizmetinizdeyiz.' },
      { title: 'Mikroçip Uygulaması', category: 'Koruyucu Hekimlik', image: '/img/content/images/pages/mikrocip.jpg', link: '#', description: 'Evcil hayvanlarınızın kimliklendirilmesini sağlayan mikroçip uygulamalarıyla güvenli bir takip sistemi sunuyoruz.' },
      { title: 'Evcil Hayvan Pasaportu ve Seyahat Raporları', category: 'Uluslararası', image: '/img/content/images/pages/pasaport.jpg', link: '#', description: 'Yurt içi ve yurt dışı seyahatlerde gerekli tüm belge ve raporları profesyonelce hazırlıyoruz.' },
      { title: 'Pet Kuaför & Bakım Hizmetleri', category: 'Bakım', image: '/img/content/images/pages/kuafor.jpg', link: '#', description: 'Tüy kesimi, banyo ve genel bakım uygulamalarıyla dostlarınızın hem sağlıklı hem de bakımlı görünmesini sağlıyoruz.' },
    ];

    const servicesContainer = document.getElementById('servicesContainer');
    const filterButtons = document.getElementById('filterButtons');
    const addedCategories = new Set();

    services.forEach(service => {
      // Kategori butonlarını dinamik oluştur
      if (!addedCategories.has(service.category)) {
        const btn = document.createElement('button');
        btn.className = 'btn btn-outline-dark';
        btn.textContent = service.category;
        btn.onclick = () => filterServices(service.category);
        filterButtons.appendChild(btn);
        addedCategories.add(service.category);
      }

      // Kart oluştur
      const col = document.createElement('div');
      col.className = `col-lg-4 col-md-6 service-card ${service.category.replace(/\s+/g, '-').toLowerCase()}`;
      col.innerHTML = `
        <div class="card h-100">
          <img src="${service.image}" onerror="this.src='/content/assets/images/resimyok.png';" class="card-img-top mx-auto mt-4" alt="${service.title}">
          <div class="card-body text-center">
            <h5 class="card-title">${service.title}</h5>
            <p class="card-text">${service.description}</p>
          </div>
        </div>
      `;
      servicesContainer.appendChild(col);
    });

    function filterServices(category) {
      const cards = document.querySelectorAll('.service-card');
      cards.forEach(card => {
        if (category === 'all' || card.classList.contains(category.replace(/\s+/g, '-').toLowerCase())) {
          card.classList.remove('hidden');
        } else {
          card.classList.add('hidden');
        }
      });
    }
</script>
